@model Alexa.Service.Dtos.GroupDto

@{
    ViewBag.Title = Model.Name;
}

<h2>Details of Group: @Html.DisplayFor(model => model.Name)</h2>

<h3>Suppliers with the Group @Html.DisplayFor(model => model.Name)</h3>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => Model.Suppliers.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => Model.Suppliers.First().Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => Model.Suppliers.First().Phone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Suppliers)
    {
        <tr>
            <td>
                @Html.ActionLink(@item.Name, "Details", "Suppliers", new { id = @item.ID }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { Class = "btn btn-default" })
    @Html.ActionLink("Delete", "Delete", new { id = Model.ID }, new { Class = "btn btn-default" })
    @Html.ActionLink("Back to Groups List", "Index", null, new { Class = "btn btn-default" })
</p>
