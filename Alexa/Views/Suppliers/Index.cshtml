@model IEnumerable<Alexa.Service.Dtos.SupplierDto>

@{
    ViewBag.Title = "Suppliers";
}

<h2>Suppliers</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Groups)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Details", new { id = item.ID })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a href="tel:@Html.DisplayFor(modelItem => item.Phone)">@Html.DisplayFor(modelItem => item.Phone)</a>
            </td>
            <td style="width:300px">
                @{string spacer = "";}
                @foreach (var subitem in item.Groups)
                {
                    @(spacer) @Html.ActionLink(@subitem.Name, "Details", "Groups", new { id = @subitem.ID }, null)

                    if (spacer == "")
                    {
                        spacer = " | ";
                    }

                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>


<p>
    @Html.ActionLink("Create New Supplier", "Create", null, new { Class = "btn btn-default" })
</p>